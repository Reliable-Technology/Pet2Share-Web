@model Pet2Share_Web.Models.PostModal


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Post a Status</h3>
        <div class="box-tools pull-right">
            @*<button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>*@
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="box-body" style="display: block;">
        @using (Html.BeginForm("AddPost", "Post", FormMethod.Post, new { @class = "form dropzone", @id = "dropzoneForm" }))
        {
            @Html.HiddenFor(p => p.ProfileId)
            @Html.HiddenFor(p => p.IsUser)
            @Html.HiddenFor(p=>p.PostPrivacyID, new{ @id="hdnPostPrivacyId"})
            <div class="form-group">
                @Html.TextAreaFor(p => p.PostMessage, new { maxlength = 300, placeholder = "What's new..", @class = "form-control", rows = "3" })
                <p class="help-block">@Html.ValidationMessageFor(p => p.PostMessage)</p>

            </div>
            <div class="form-group">


                <div class="fallback">
                    <input name="file" type="file" />

                </div>

            </div>
            <div class="row">
                <div class="col-md-9">
                    <div id="dropzonePreview" class="dz-default dz-message">
                        <span>Drop images here to upload</span>
                    </div>
                </div>

                <div class="col-md-3 pull-right form-group">
                    <div class="row">
                        <div class="col-md-7">
                            <select class="form-control selectpicker">
                                <option value="1" data-icon="glyphicon-globe">Public</option>
                                <option value="2" data-icon="glyphicon-user">Private</option>
                            </select>
                        </div>
                        <div class="col-md-5">
                            <button type="submit" class="btn btn-primary btn-block">Post</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="dzthumbPrev">
                    </div>
                </div>
            </div>
        }
    </div><!-- /.box-body -->
</div>
