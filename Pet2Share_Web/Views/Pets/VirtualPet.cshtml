@{
    ViewBag.Title = "VirtualPet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        Add a new pet
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Widget: user widget style 1 -->
            <a href="@Url.Action("Create","Pets")">
                <div class="box box-widget widget-user">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header-small  bg-aqua-active text-center">
                        <h3 class="widget-user-username">Add a pet</h3>

                    </div>
                    <div class="widget-user-image-small" style=" top: 30px; margin-left:-27px">
                        <div class="icon" style="font-size:70px;color:#333">
                            <i class="fa fa-plus-circle"></i>
                        </div>
                    </div>


                </div><!-- /.widget-user -->
            </a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("CreateVirtualPet", "Pets")">
                <!-- Widget: user widget style 1 -->
                <div class="box box-widget widget-user">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header-small  bg-aqua-active text-center">
                        <h3 class="widget-user-username">Create virtual Pet</h3>

                    </div>
                    <div class="widget-user-image-small" style=" top: 30px;margin-left:-27px">
                        <div class="icon" style="font-size:70px;color:#333">
                            <i class="fa fa-paw"></i>
                        </div>
                    </div>


                </div><!-- /.widget-user -->
                </a>
</div>
    </div>
     
</section>