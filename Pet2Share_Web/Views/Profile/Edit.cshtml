@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Pet2Share_Web.Models.UserProfileModel

<h2 class="page-header">Update profile Info</h2>
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "form" }))
            {
                @Html.HiddenFor(p => p.UserId)
                <div class="box-body">
                    @*<div class="form-group">
                            <label>Email/Username</label>
                            @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
                            <p class="help-block">@Html.ValidationMessageFor(p => p.Email)</p>

                        </div>*@
                    <div class="box-header with-border">
                        <h3 class="box-title">Personal Info</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name</label>
                                @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.FirstName)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.LastName)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Altername Email</label>
                                @Html.TextBoxFor(p => p.AlternateEmail, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.AlternateEmail)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date Of Birth</label>
                                @Html.TextBoxFor(p => p.DateOfBirth, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.DateOfBirth)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone No</label>
                                @Html.TextBoxFor(p => p.PhoneNumber, new { @class = "form-control phonemask1" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.PhoneNumber)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Secondary Phone</label>
                                @Html.TextBoxFor(p => p.SecondaryPhone, new { @class = "form-control phonemask1" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.SecondaryPhone)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>About you</label>
                                @Html.TextAreaFor(p => p.AboutMe, new { @class = "form-control", @rows = "6" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.AboutMe)</p>
                            </div>
                        </div>


                    </div>
                    <div class="box-header with-border">
                        <h3 class="box-title">Address Info</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Address Line 1</label>
                                @Html.TextBoxFor(p => p.AddressLine1, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.AddressLine1)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Address Line 2</label>
                                @Html.TextBoxFor(p => p.AddressLine2, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.AddressLine2)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>City</label>
                                @Html.TextBoxFor(p => p.City, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.City)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>State</label>
                                @Html.TextBoxFor(p => p.State, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.State)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Country</label>
                                @Html.TextBoxFor(p => p.Country, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.Country)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Zipcode</label>
                                @Html.TextBoxFor(p => p.ZipCode, new { @class = "form-control" })
                                <p class="help-block">@Html.ValidationMessageFor(p => p.ZipCode)</p>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            }
        </div><!-- /.box -->

    </div>
</div>
