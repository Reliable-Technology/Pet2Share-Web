<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <!-- USERS LIST -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Connections</h3>

                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <ul class="users-list clearfix">
                   
                        @foreach (var Usr in Model.UsersList)
                        {
                            <li>
                                <img src="@(Pet2Share_Web.BL.FormatText.Instance.GetValidImage(Usr.ProfilePictureURL, false, Pet2Share_Web.BL.FormatText.Thumbnail128px))" alt="User Image">
                                <a class="users-list-name" href="@Url.Action("Details", "Connection", new { @id = Usr.Id })">@Usr.Name</a>
                                <span class="users-list-date">Today</span>
                            </li>
                        }
                    
                    </ul><!-- /.users-list -->
                </div><!-- /.box-body -->
                @*<div class="box-footer text-center">
                        <a href="javascript::" class="uppercase">View All Users</a>
                    </div>*@
                <!-- /.box-footer -->
            </div><!--/.box -->
        </div>
    </div>
</section>

<script>
    $(function () {

        $('.sidebar-menu li').removeClass('active');
        $('.menuConnection').addClass('active');
        loadFeed();

    });
</script>